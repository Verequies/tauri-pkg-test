{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"@/*": [
				"src/*",
				"src-backend/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"babel.config.js",
		".eslintrc.js",
		"src/**/*.ts",
		"src/**/*.vue",
		"src-backend/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}